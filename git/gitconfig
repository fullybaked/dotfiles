
[core]
    quotepath = false
    editor = nvim
    excludesfile = /Users/dave/.gitignore
[user]
    name = Dave Baker
    email = david@fullybaked.co.uk
    trustExitCode = true
[push]
    default = current
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added = yellow
    changed = green
    untracked = blue
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
    undo = reset --soft HEAD~
    lg =  log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
[branch]
    autosetuprebase = always
[help]
  autocorrect = 1
